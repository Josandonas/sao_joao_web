<%# Componente de formul치rio de login %>
<div class="text-center mb-4">
  <div class="display-1 text-primary mb-3">
    <i class="bi bi-person-circle"></i>
  </div>
  <h1 class="h4 mb-2 fw-bold text-primary">Painel Administrativo</h1>
  <p class="text-muted">Entre com suas credenciais para acessar</p>
</div>
      
<form action="/admin/login" method="POST" class="needs-validation" id="loginForm" novalidate>
