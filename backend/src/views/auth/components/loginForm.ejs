  <input type="hidden" name="debug" value="true">
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="username" name="username" placeholder="Nome de usu치rio" required autofocus>
    <label for="username"><i class="bi bi-person me-1"></i> Nome de usu치rio</label>
    <div class="invalid-feedback">
      Por favor, informe seu nome de usu치rio.
    </div>
  </div>
  
  <div class="form-floating mb-4">
    <input type="password" class="form-control" id="password" name="password" placeholder="Senha" required>
    <label for="password"><i class="bi bi-lock me-1"></i> Senha</label>
    <div class="invalid-feedback">
      Por favor, informe sua senha.
    </div>
  </div>
  
  <div class="d-grid">
    <button class="btn btn-primary btn-lg" type="submit">
      <i class="bi bi-box-arrow-in-right me-2"></i>Entrar
    </button>
  </div>
</form>
