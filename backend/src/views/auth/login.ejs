<%- contentFor('style') %>
<link rel="stylesheet" href="/views/auth/css/auth.css">

<div class="container min-vh-100 d-flex align-items-center py-5">
  <div class="row g-0 shadow rounded overflow-hidden w-100">
    <!-- Coluna da ilustração - Lado esquerdo -->
    <div class="col-lg-6 bg-primary bg-gradient text-white p-5 d-flex flex-column justify-content-center align-items-center position-relative auth-illustration">
      <div class="position-absolute top-25 end-25 bg-white bg-opacity-75 rounded-circle p-3 shadow-lg moon auth-icon">
        <i class="bi bi-moon-stars text-primary" style="font-size: 3rem;"></i>
      </div>
      <h2 class="display-4 mb-2 text-center">São João Web</h2>
      <p class="lead text-center">Sistema de Gerenciamento da Plataforma São João de Corumbá</p>
      
      <!-- Elementos decorativos -->
      <div class="star" style="top: 15%; left: 20%; width: 3px; height: 3px; animation-duration: 3s;"></div>
      <div class="star" style="top: 25%; left: 40%; width: 2px; height: 2px; animation-duration: 4s;"></div>
      <div class="star" style="top: 35%; left: 15%; width: 4px; height: 4px; animation-duration: 2.5s;"></div>
      <div class="star" style="top: 65%; left: 35%; width: 3px; height: 3px; animation-duration: 3.5s;"></div>
      <div class="star" style="top: 75%; left: 25%; width: 2px; height: 2px; animation-duration: 4.5s;"></div>
      
      <div class="cloud" style="top: 20%; left: 10%; animation-duration: 30s;"></div>
      <div class="cloud" style="top: 60%; left: -20%; animation-duration: 25s;"></div>
    </div>
    
    <!-- Coluna do formulário - Lado direito -->
    <div class="col-lg-6 bg-white p-5 d-flex flex-column justify-content-center auth-form">
      <%- include('../components/flashMessages') %>
      <%- include('./components/loginForm') %>
      
      <div class="text-center mt-4">
        <p class="text-muted">&copy; <%= new Date().getFullYear() %> São João Web</p>
      </div>
    </div>
  </div>
</div>

<%- contentFor('script') %>
<script src="/views/auth/js/auth.js"></script>
