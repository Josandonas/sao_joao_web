<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof pageTitle !== 'undefined' ? `${pageTitle} - São João Web` : 'São João Web - Painel Administrativo' %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/public/css/admin.css">
  <!-- Os estilos foram movidos para o arquivo CSS externo -->
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/admin">São João Web</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="bi bi-person-circle"></i> <%= user ? user.username : 'Usuário' %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
              <li><a class="dropdown-item" href="/admin/profile"><i class="bi bi-person"></i> Perfil</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item" href="/admin/logout"><i class="bi bi-box-arrow-right"></i> Sair</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="sidebar-sticky pt-3">
          <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
            <span>Principal</span>
          </h6>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link <%= activeRoute === 'dashboard' ? 'active' : '' %>" href="/admin">
                <i class="bi bi-speedometer2"></i> Dashboard
              </a>
            </li>
          </ul>
          
          <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
            <span>Módulos</span>
          </h6>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link <%= activeRoute === 'testimonials' ? 'active' : '' %>" href="/admin/testimonials">
                <i class="bi bi-chat-quote"></i> Depoimentos
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= activeRoute === 'postcards' ? 'active' : '' %>" href="/admin/postcards">
                <i class="bi bi-card-image"></i> Postais
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= activeRoute === 'biblioteca' ? 'active' : '' %>" href="/admin/biblioteca">
                <i class="bi bi-book"></i> Biblioteca
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= activeRoute === 'galeria' ? 'active' : '' %>" href="/admin/galeria">
                <i class="bi bi-images"></i> Galeria
              </a>
            </li>
          </ul>
          
          <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
            <span>Gerenciamento</span>
          </h6>
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link <%= activeRoute === 'users' ? 'active' : '' %>" href="/admin/users">
                <i class="bi bi-people"></i> Usuários
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link <%= activeRoute === 'logs' ? 'active' : '' %>" href="/admin/logs">
                <i class="bi bi-file-text"></i> Logs
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Main content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2"><%= typeof pageTitle !== 'undefined' ? pageTitle : 'Dashboard' %></h1>
        </div>

        <!-- Flash messages -->
        <% if (typeof messages !== 'undefined' && messages.success) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= messages.success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <% if (typeof messages !== 'undefined' && messages.error) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= messages.error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        <% } %>

        <!-- Content -->
        <%- body %>
      </main>
    </div>
  </div>
  
  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  
  <!-- Custom JS -->
  <script src="/public/js/admin.js"></script>
  
  <!-- Scripts específicos da página -->
  <%- typeof script !== 'undefined' ? script : '' %>
  
  <script>
    // Inicializar tooltips globalmente
    document.addEventListener('DOMContentLoaded', function() {
      const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
      tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
      });
    });
  </script>
</body>
</html>
