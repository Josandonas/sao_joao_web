<!-- Componente de filtros para usuários -->
<div class="card shadow mb-4">
  <div class="card-header py-3 d-flex justify-content-between align-items-center">
    <h6 class="m-0 font-weight-bold text-primary">Filtros</h6>
    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse">
      <i class="bi bi-funnel"></i> Mostrar/Ocultar
    </button>
  </div>
  <div class="collapse" id="filterCollapse">
    <div class="card-body">
      <form id="userFilterForm" method="GET" action="/admin/users">
        <div class="row">
          <div class="col-md-4 mb-3">
            <label for="searchTerm" class="form-label">Buscar</label>
            <input type="text" class="form-control" id="searchTerm" name="search" placeholder="Nome, email ou username" value="<%= locals.filters && locals.filters.search ? locals.filters.search : '' %>">
          </div>
          <div class="col-md-4 mb-3">
            <label for="roleFilter" class="form-label">Perfil</label>
            <select class="form-select" id="roleFilter" name="role">
              <option value="">Todos</option>
              <option value="admin" <%= locals.filters && locals.filters.role === 'admin' ? 'selected' : '' %>>Administrador</option>
              <option value="user" <%= locals.filters && locals.filters.role === 'user' ? 'selected' : '' %>>Usuário</option>
            </select>
          </div>
          <div class="col-md-4 mb-3">
            <label for="sortBy" class="form-label">Ordenar por</label>
            <select class="form-select" id="sortBy" name="sort">
              <option value="created_at_desc" <%= locals.filters && locals.filters.sort === 'created_at_desc' ? 'selected' : '' %>>Data de criação (mais recente)</option>
              <option value="created_at_asc" <%= locals.filters && locals.filters.sort === 'created_at_asc' ? 'selected' : '' %>>Data de criação (mais antiga)</option>
              <option value="username_asc" <%= locals.filters && locals.filters.sort === 'username_asc' ? 'selected' : '' %>>Username (A-Z)</option>
              <option value="username_desc" <%= locals.filters && locals.filters.sort === 'username_desc' ? 'selected' : '' %>>Username (Z-A)</option>
            </select>
          </div>
        </div>
        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-primary me-2">
            <i class="bi bi-search"></i> Filtrar
          </button>
          <a href="/admin/users" class="btn btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Limpar
          </a>
        </div>
      </form>
    </div>
  </div>
</div>
