<%- contentFor('body') %>

<div class="row">
  <!-- Estatísticas gerais -->
  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card stat-card primary h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="text-uppercase fw-bold text-primary mb-1">Depoimentos</h6>
            <h2 class="mb-0 fw-bold"><%= stats.testimonials %></h2>
          </div>
          <div class="stat-icon text-primary">
            <i class="bi bi-chat-quote"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-transparent border-0 py-2">
        <a href="/admin/testimonials" class="text-decoration-none small text-primary">Ver detalhes <i class="bi bi-arrow-right"></i></a>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card stat-card success h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="text-uppercase fw-bold text-success mb-1">Postais</h6>
            <h2 class="mb-0 fw-bold"><%= stats.postcards %></h2>
          </div>
          <div class="stat-icon text-success">
            <i class="bi bi-card-image"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-transparent border-0 py-2">
        <a href="/admin/postcards" class="text-decoration-none small text-success">Ver detalhes <i class="bi bi-arrow-right"></i></a>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card stat-card info h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="text-uppercase fw-bold text-info mb-1">Biblioteca</h6>
            <h2 class="mb-0 fw-bold"><%= stats.biblioteca %></h2>
          </div>
          <div class="stat-icon text-info">
            <i class="bi bi-book"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-transparent border-0 py-2">
        <a href="/admin/biblioteca" class="text-decoration-none small text-info">Ver detalhes <i class="bi bi-arrow-right"></i></a>
      </div>
    </div>
  </div>

  <div class="col-xl-3 col-md-6 mb-4">
    <div class="card stat-card warning h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="text-uppercase fw-bold text-warning mb-1">Galeria</h6>
            <h2 class="mb-0 fw-bold"><%= stats.galeria %></h2>
          </div>
          <div class="stat-icon text-warning">
            <i class="bi bi-images"></i>
          </div>
        </div>
      </div>
      <div class="card-footer bg-transparent border-0 py-2">
        <a href="/admin/galeria" class="text-decoration-none small text-warning">Ver detalhes <i class="bi bi-arrow-right"></i></a>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-lg-7">
    <!-- Depoimentos pendentes -->
    <div class="card shadow mb-4">
      <div class="card-header bg-white py-3 d-flex flex-row align-items-center justify-content-between">
        <h5 class="m-0 fw-bold text-primary">Depoimentos Pendentes</h5>
        <a href="/admin/testimonials" class="btn btn-sm btn-outline-primary">Ver Todos</a>
      </div>
      <div class="card-body p-0">
        <% if (pendingTestimonials && pendingTestimonials.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th>Nome</th>
                  <th>Categoria</th>
                  <th>Data</th>
                  <th class="text-end">Ações</th>
                </tr>
              </thead>
              <tbody>
                <% pendingTestimonials.forEach(testimonial => { %>
                  <tr>
                    <td class="align-middle">
                      <div class="d-flex align-items-center">
                        <div>
                          <div class="fw-bold"><%= testimonial.name %></div>
                          <div class="small text-muted"><%= testimonial.location %></div>
                        </div>
                      </div>
                    </td>
                    <td class="align-middle">
                      <span class="badge bg-secondary"><%= testimonial.category %></span>
                    </td>
                    <td class="align-middle">
                      <span class="small text-muted"><%= new Date(testimonial.created_at).toLocaleDateString('pt-BR') %></span>
                    </td>
                    <td class="align-middle text-end">
                      <div class="btn-group btn-group-sm">
                        <a href="/admin/testimonials/<%= testimonial.id %>" class="btn btn-outline-secondary" data-bs-toggle="tooltip" title="Visualizar">
                          <i class="bi bi-eye"></i>
                        </a>
                        <a href="/admin/testimonials/<%= testimonial.id %>/publish" class="btn btn-outline-success btn-publish" data-bs-toggle="tooltip" title="Publicar">
                          <i class="bi bi-check-lg"></i>
                        </a>
                        <a href="/admin/testimonials/<%= testimonial.id %>/delete" class="btn btn-outline-danger btn-delete" data-bs-toggle="tooltip" title="Excluir">
                          <i class="bi bi-trash"></i>
                        </a>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 2rem;"></i>
            <p class="text-muted mt-3">Não há depoimentos pendentes.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
  
  <div class="col-lg-5">
    <!-- Últimas atividades -->
    <div class="card shadow mb-4">
      <div class="card-header bg-white py-3 d-flex flex-row align-items-center justify-content-between">
        <h5 class="m-0 fw-bold text-primary">Últimas Atividades</h5>
        <a href="/admin/logs" class="btn btn-sm btn-outline-primary">Ver Todos</a>
      </div>
      <div class="card-body p-0">
        <% if (recentLogs && recentLogs.length > 0) { %>
          <div class="list-group list-group-flush">
            <% recentLogs.forEach(log => { %>
              <div class="list-group-item list-group-item-action py-3">
                <div class="d-flex w-100 justify-content-between">
                  <h6 class="mb-1"><%= log.action.replace(/_/g, ' ').toLowerCase() %></h6>
                  <small class="text-muted"><%= new Date(log.timestamp).toLocaleString('pt-BR') %></small>
                </div>
                <p class="mb-1 small">
                  <% if (log.entity && log.entity_id) { %>
                    <span class="badge bg-light text-dark"><%= log.entity %> #<%= log.entity_id %></span>
                  <% } %>
                </p>
                <small class="text-muted">
                  <i class="bi bi-person-circle me-1"></i> <%= log.username || 'Anônimo' %>
                </small>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center py-5">
            <i class="bi bi-activity text-muted" style="font-size: 2rem;"></i>
            <p class="text-muted mt-3">Não há registros de atividades recentes.</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
