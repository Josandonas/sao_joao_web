<%# Componente de atividades recentes %>
<div class="card shadow mb-4">
  <div class="card-header bg-white py-3">
    <h6 class="m-0 fw-bold text-primary">Atividades Recentes</h6>
  </div>
  <div class="card-body">
    <% if (activities && activities.length > 0) { %>
      <ul class="timeline">
        <% activities.forEach(activity => { %>
          <li class="timeline-item mb-4">
            <div class="timeline-marker <%= activity.type === 'create' ? 'bg-success' : activity.type === 'update' ? 'bg-primary' : 'bg-danger' %>">
              <i class="bi <%= activity.type === 'create' ? 'bi-plus' : activity.type === 'update' ? 'bi-pencil' : 'bi-trash' %>"></i>
            </div>
            <div class="timeline-content">
              <h6 class="mb-0"><%= activity.user.name %></h6>
              <p class="text-muted mb-0"><%= activity.description %></p>
              <small class="text-muted">
                <i class="bi bi-clock me-1"></i> <%= new Date(activity.created_at).toLocaleString('pt-BR') %>
              </small>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <div class="text-center py-4">
        <i class="bi bi-calendar-check text-muted" style="font-size: 2rem;"></i>
        <p class="text-muted mt-3 mb-0">Nenhuma atividade recente registrada.</p>
      </div>
    <% } %>
  </div>
</div>
