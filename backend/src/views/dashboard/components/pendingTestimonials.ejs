<%# Componente de depoimentos pendentes %>
<div class="card shadow mb-4">
  <div class="card-header bg-white py-3 d-flex flex-row align-items-center justify-content-between">
    <h6 class="m-0 fw-bold text-primary">Depoimentos Pendentes</h6>
    <a href="/admin/testimonials?status=draft" class="btn btn-sm btn-primary">
      Ver Todos
    </a>
  </div>
  <div class="card-body p-0">
    <% if (pendingTestimonials && pendingTestimonials.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>Nome</th>
              <th>Categoria</th>
              <th>Data</th>
              <th class="text-end">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% pendingTestimonials.forEach(testimonial => { %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div>
                      <div class="fw-bold"><%= testimonial.name %></div>
                      <div class="small text-muted"><%= testimonial.location %></div>
                    </div>
                  </div>
                </td>
                <td>
                  <span class="badge bg-light text-dark"><%= testimonial.category %></span>
                </td>
                <td>
                  <span class="small text-muted"><%= new Date(testimonial.created_at).toLocaleDateString('pt-BR') %></span>
                </td>
                <td class="text-end">
                  <div class="btn-group btn-group-sm">
                    <a href="/admin/testimonials/<%= testimonial.id %>" class="btn btn-outline-secondary" data-bs-toggle="tooltip" title="Visualizar">
                      <i class="bi bi-eye"></i>
                    </a>
                    <button type="button" class="btn btn-outline-success btn-publish" data-id="<%= testimonial.id %>" data-bs-toggle="tooltip" title="Publicar">
                      <i class="bi bi-check-lg"></i>
                    </button>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="text-center py-5">
        <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
        <p class="text-muted mt-3 mb-0">Não há depoimentos pendentes de aprovação.</p>
      </div>
    <% } %>
  </div>
</div>
