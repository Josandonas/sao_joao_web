<%- contentFor('title') %>
Auditoria do Sistema

<%- contentFor('style') %>
<link rel="stylesheet" href="/views/audit/css/audit.css">
<style>
  .audit-details {
    max-height: 300px;
    overflow-y: auto;
    font-family: monospace;
    white-space: pre-wrap;
    background-color: #f8f9fa;
    padding: 10px;
    border-radius: 4px;
    font-size: 12px;
  }
</style>



<%- contentFor('body') %>
<div class="container-fluid px-4">
  <!-- Filtros -->
  <%- include('./components/auditFilters', { 
    filters: locals.filters || {}, 
    filterOptions: locals.filterOptions || {} 
  }) %>
  
  <!-- Lista de Logs -->
  <%- include('./components/auditList', { 
    logs: locals.logs || [], 
    pagination: locals.pagination || {}, 
    queryString: locals.queryString || '' 
  }) %>
  
  <!-- Incluir o modal de detalhes da auditoria -->
  <%- include('./components/auditDetailModal') %>
</div>

<%- contentFor('script') %>
<script src="/views/audit/js/audit.js"></script>
